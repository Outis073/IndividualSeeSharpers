@using IndividualSeeSharpers.Services.SeatService
@using Microsoft.AspNetCore.Mvc.Localization
@model IndividualSeeSharpers.Models.Show
@inject IViewLocalizer localizer;
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1>Overzicht bestelling</h1>
    <h2>Film</h2>
    <p>@Html.DisplayFor(model => model.Movie.Title)</p>
    
    <h2>Stoelen</h2>
    <ol>
        @foreach (var seat in ViewBag.Seats)
        {
            <li class="border">
                <p class="mb-0">Stoel nummer: @seat.Number</p>
                <p>Rij nummer: @seat.RowNumber</p>
            </li>
            <li class="list-group-item bg-black text-white">
                <a asp-controller="Payment" asp-action="Index" class="btn btn-info">@localizer["Payment"]</a>
            </li>
        }
    </ol>
    <a asp-controller="Special" class="btn btn-info" asp-action="Index">Specials</a>
</div>
