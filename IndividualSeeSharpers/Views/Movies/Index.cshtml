@model IEnumerable<IndividualSeeSharpers.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Movie overview</h1>

<p>
    <a class="btn btn-outline-light" asp-action="Create">Create New Movie</a>
</p>

<section class="container-fluid">
    @foreach (var item in Model)
    {
        <div class="row border-bottom pb-3">
            <div class="row pb-3">
                <div class="col-lg-12"><h5 class="m-2">@Html.DisplayFor(modelItem => item.Title)</h5></div>
                
            </div>        
                    <div class="col-lg-2">
                        <img src="@Html.DisplayFor(modelItem => item.Thumbnail)" class="w-75 m-2" alt="...">
                </div>
            <div class="col-lg-3">

                <span>@Html.DisplayNameFor(model => model.Duration) : &nbsp;</span>
                <span class="fw-light mb-3">@Html.DisplayFor(modelItem => item.Duration)</span>

                <br/>
                <br/>

                <span>3D Movie: &nbsp;</span>

                @if (item.Movie3d == true)
                {
                    <span class="fw-light mb-3"> Yes</span>
                }
                else
                {
                    <span class="fw-light mb-3"> No</span>
                }
                <br/>
                <br/>

                <span>@Html.DisplayNameFor(modelItem => item.AgeRequirement): &nbsp;</span>
                <span class="fw-light">@Html.DisplayFor(modelItem => item.AgeRequirement)</span>

                <br/>
                <br/>

                <span>@Html.DisplayNameFor(modelItem => item.Genre) : &nbsp;</span>
                <span class="fw-light">@Html.DisplayFor(modelItem => item.Genre)</span>

            </div>
            <div class="col-lg-4">

                <span class="mb-3">@Html.DisplayNameFor(modelItem => item.Description)</span>
                <br/>
                <br/>
                <span class="fw-light">@Html.DisplayFor(modelItem => item.Description)</span>

            </div>
                <div class="col-lg-3">
                    <a class="btn btn-outline-light" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                    <a class="btn btn-outline-light" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                    <a class="btn btn-outline-light" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            
        </div>
    }
</section>
